@model Medical.ViewModel.CLoginViewModel

@{
    ViewData["Title"] = "ResetPassword";
}

<h1>重設密碼</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ResetPassword">
            <input asp-for="txtAccount" class="form-control mb-2" id="email" hidden="hidden"/>
            <div class="form-group">
                <label>您的新密碼</label>
                <input asp-for="txtPassword" class="form-control" />
                <span asp-validation-for="txtPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="確認修改" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
