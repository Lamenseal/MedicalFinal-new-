@model Medical.ViewModel.CLoginViewModel

@{
    ViewData["Title"] = "ForgetPassword";
}

<h1>重新設定密碼</h1>

<h4>請填寫你註冊的信箱</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ForgetPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="txtAccount" class="control-label"></label>
                <input asp-for="txtAccount" class="form-control" />
                <span asp-validation-for="txtAccount" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="寄送確認信" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
