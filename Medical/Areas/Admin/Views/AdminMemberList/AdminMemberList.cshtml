@model IEnumerable<Medical.Models.Member>
@*管理者LayOut*@
@{
    ViewData["Title"] = "AdminLoginMemberList";
    Layout = "~/Areas/Admin/Admin_Layout.cshtml";
}

<a asp-action="AdminCreate" class="fas fa-user-plus">新增會員</a>
<h1>會員資料管理頁面</h1>
<div class="col-md-3">
    <div>
        @using (Html.BeginForm())
        {
            @:關鍵字 @Html.TextBox("txtKeyword")
            <input type="submit" value="查詢" />
        }

        <a>權限篩選</a>
        <select id="roleSelect">

            <option>選擇權限</option>
            <option id="role1">權限1</option>
            <option id="role2">權限2</option>
            <option id="role3">權限3</option>

        </select>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                序號
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentityId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenderId)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.BloodType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Weight)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.IcCardNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.OdRight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OsLeft)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdentityId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GenderId)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.BloodType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Weight)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.IcCardNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.OdRight)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OsLeft)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CityId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.ActionLink("", "Edit", "AdminMemberList", new { id = item.MemberId }, new { Class = "fas fa-edit" })
                        @Html.ActionLink("", "Delete", "AdminMemberList", new { id = item.MemberId }, new { onclick = "return confirm('確定要刪除資料嗎?')", Class = "fas fa-trash" })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<br />
<br />
<br />
<br />
<br />
@section Scripts{
    <script>
        const roleSelect = document.querySelector("#roleSelect");

        roleSelect.addEventListener('change', () => {
            alert($('#roleSelect').val());
            LoadTable();

        });

        async function LoadTable() {
            const selectedRoleIndex = roleSelect.selectedIndex;
            console.log(selectedRoleIndex);  //index 0 1 2 3
            const selectedRole = roleSelect.options[roleSelect.selectedIndex].value;
            console.log(selectedRole);   //權限1.權限2..

        };
    </script>
}
